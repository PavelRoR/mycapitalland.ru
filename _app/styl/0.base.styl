*
	margin 0
	padding 0
	outline none
body
	background-color #fff
	color #000000
	font-size: 18px
	font-family: G
	line-height: 28px
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.button
	display: block
	margin 0 auto
	text-align: center
	color: #fff
	text-transform: uppercase;
	background-color: #fe0000
	width 100%
	max-width 270px
	padding 19px 10px
	text-decoration: none
	transition: all .5s ease
	&:focus
		text-decoration: none
		color #fff
	&:hover
		color #fff
		background-color: #fe0000 - 15%
		transform: scale(1.1)
.general-title
	font-size: 40px;
	font-family: Gk
	line-height: 1
	margin-bottom: 40px