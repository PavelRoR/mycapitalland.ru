@import '0.fonts'

@import '../_css/bootstrap.min.css'

@import '0.base'

header
	padding 8px 0
	overflow hidden
	margin-bottom: 15px
.header-logo
	float left
.contacts
	float: right
	text-align: right
	padding 10px 0
.contact
	color #000
	background-repeat no-repeat
	background-position: left center
	background-size: contain
	line-height: 20px
	font-size: 18px
	&:focus
		color #000
		text-decoration: none
	&:hover
		color #000
		text-decoration: underline
	&-email
		padding-left: 30px
		background-image url(../img/icons/envelope.png)
	&-tel
		margin-left: 30px
		padding-left: 24px
		background-image url(../img/icons/tube.png)

#confirm
	padding 0 0 20px
	min-height calc(100vh - 256px)
	background-image url(../img/confirm/confirm-img.jpg)
	background-repeat no-repeat
	background-position: bottom right
	.container
		position relative
.main-title
	position absolute
	top 4%
	right 20%
	width 458px
	height 406px
	background-image url(../img/confirm/title-bg.png)
	background-repeat no-repeat
	background-position: center
	background-size 90%
	text-align: center
	font-size: 48px
	font-family: Gk
	color #fff
	text-transform uppercase
	padding 110px 90px 0
	line-height: 43px
	span
		display block
		font-size: 22px
		font-family: Gd
		line-height: 23px
.main-text
	font-size: 20px
	line-height: 25px
	width 100%
	span
		color #7c136c
		font-family: GPd
	&:nth-of-type(1)
		max-width 415px
		span
			display block
	&:nth-of-type(2)
		margin 50px 0
		max-width 475px
		span
			text-transform: uppercase
	&:nth-of-type(3)
		font-size: 22px
		font-family: GPd
		max-width 565px
		text-transform uppercase
	&:nth-of-type(4)
		font-family: G
		font-style: italic
		margin 30px 0
		max-width 565px
.mail
	margin-right: 10px
	display inline-block
	background-repeat no-repeat
	background-position: center
	// background-size contain
	height 31px
	width 70px
	&&-yandex
		background-image url(../img/confirm/yandex.png)
	&&-gmail
		background-image url(../img/confirm/gmail.png)
	&&-mailru
		background-image url(../img/confirm/mailru.png)
	&&-rambler
		background-image url(../img/confirm/rambler.png)

@import 'main/6.footer'

@media screen and (min-width 1600px)
	header
		margin-bottom 50px
	.main-title
		right -2%
@media screen and (min-width 2295px)
	.container
		width 1400px
	.main-title
		top 70%
		right -16%
@media screen and (max-width 1199px)
	.main-title
		right 0
	#confirm
		background-position: right bottom -300px
@media screen and (max-width 991px)
	.header-logo
		float: none
		display block
		margin 0 auto 5px
		width 120px
	.contacts
		text-align center
		float: none
		padding 0
	#confirm
		background-image: none
	.main-title
		position: static
		margin 0 auto 40px
		height: 335px;
		padding: 75px 90px 0;
	.main-text:nth-of-type(1)
	.main-text:nth-of-type(2)
	.main-text:nth-of-type(3)
	.main-text:nth-of-type(4)
		max-width 100%
	.main-text:nth-of-type(2)
		margin 30px 0
	footer
		padding 50px 0
@media screen and (max-width 767px)
	header
		padding 15px 0
		margin-bottom: 20px
	.contacts
		text-align: center
	.contact
		display: inline-block
	footer
		text-align: center
		padding 20px 0
	.footer-contact
		display block
		margin-bottom: 5px
	.footer-soc-buttons img
		margin-top: 10px
@media screen and (max-width 485px)
	header
		padding 10px 0
		margin-bottom: 10px
	.header-logo
		width 100px
		margin-bottom: 0
	.contact
		font-size: 12px
		margin-left: 10px
		line-height: 14px
		padding-left: 15px
	.contact-email
		margin-left: 0
		padding-left: 20px
	.main-title
		width 100%
		padding 20% 20% 0
		font-size: 32px
		line-height: 1
		background-size contain
		span
			margin-top: 10px
	.main-text
	.main-text:nth-of-type(3)
		font-size: 18px
	.main-text:nth-of-type(2)
	.main-text:nth-of-type(4)
		margin 20px 0
	footer
		padding 15px 0
		font-size: 14px
		line-height: 1
	.footer-contact
		margin-bottom 10px
	.footer-soc-buttons img
		margin-top: 20px
@media screen and (max-width 385px)
	.main-title
		padding 0
		height auto
		font-size: 30px
		color #7c136c
		background-image: none
		margin-bottom: 20px
		text-align: left
	.mail
		width 50%
		margin-right: 0