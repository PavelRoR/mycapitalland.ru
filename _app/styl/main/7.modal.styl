.modal.fancybox-content
	display none
.modal-title
	text-align: center
	font-size: 28px
	font-family: Gd
	margin-bottom: 30px
.input
	display block
	margin 0 auto 20px
	width 100%
	max-width 270px
	border: 1px solid #eee
	padding 13px 10px
.alert-message {
	clear both
	display: none;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-family: Gd
	line-height: 1
	font-size: 16px
}
.checking {
	display: table;
	width 100%
	max-width 550px
	margin: 3px auto 0
	text-align: left
}

.checking .check-label {
	line-height: 40px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 40px;
	text-align: left;
	font-size: 14px
}

.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed
	display: inline
	color #000
	&:focus
		border-bottom: 1px dashed
		color #000
	&:hover
		border-bottom: none
		text-decoration: none
		color #000

.checking .check-label:before {
	content: '';
	background-color: #004DA6
	position: absolute;
	left: 0;
	top: 3px;
	width: 31px;
	height: 31px;
	border none
}

.checking .check-label:after {
	content: '';
	position: absolute;
	left: 10px;
	top: -10px;
	width: 11px;
	height: 18px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff
	border-right: 2px solid #fff
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + .check-label:before {
	background-color: #004DA6

}

.check:checked + .check-label:after {
	opacity: 1;
	top: 7px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}