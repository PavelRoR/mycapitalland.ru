#author
	padding 80px 0
	overflow hidden
.author-text
	margin-bottom: 20px
	&:last-of-type
		margin-bottom: 0
.author-img
	position relative
	img
		position absolute
		top 0
		left 0
		width auto
#certs
	margin 70px 0
.cert-img
	object-fit: contain
	object-position: center top
	height 384px
	width auto
	display: block
	margin 0 auto 20px
.cert-text
	font-size: 16px
	line-height: 1.3
.owl-item > div
	min-height 288px
.owl-nav
	display block !important
	position absolute
	top 142px
	height 0
	width 110%
	left -5%
.owl-theme .owl-nav [class*="owl-"]
	font-size: 100px
	font-family: G
	color #950065
	background-color: transparent
	opacity .8
	&:hover
		opacity 1
		background-color: transparent
		color #950065
.owl-prev
	float left
.owl-next
	float: right
	
.author-collage
	width 100%
	max-width 1336px
	display block
	margin 0 auto