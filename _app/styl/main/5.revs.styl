#revs
	padding 0 0 60px
.video-wrapper-rev
	max-width 560px
.button-revs
	margin: 50px auto 80px
.text-rev-link
	display block
	position relative
	overflow hidden
	margin 0 auto 20px
	text-align: center
	&:after
		content: ''
		display block
		position absolute
		width 100%
		height 100%
		background-color: rgba(0,0,0,.65)
		background-image url(../img/icons/zoom.png)
		background-repeat no-repeat
		background-position: center
		top 0
		left 0
		right 0
		bottom: 0
		transition: all .5s ease
		opacity 0
	&:hover.text-rev-link:after
		opacity 1
.text-rev
	width 100%
	height auto
	object-fit: contain
	object-position: center
	height 110px
	display: inline
	width 100%
.text-rev-double
	height 55px