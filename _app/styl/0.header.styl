header
	padding 8px 0
	overflow hidden
	margin-bottom: 15px
.header-logo
	float left
.contacts
	float: right
	text-align: right
	padding 10px 0
.contact
	color #fff
	background-repeat no-repeat
	background-position: left center
	background-size: contain
	line-height: 20px
	font-size: 18px
	&:focus
		color #fff
		text-decoration: none
	&:hover
		color #fff
		text-decoration: underline
	&-email
		padding-left: 30px
		background-image url(../img/icons/envelope.png)
	&-tel
		margin-left: 30px
		padding-left: 24px
		background-image url(../img/icons/tube.png)