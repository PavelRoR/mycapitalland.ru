@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
@media screen and (max-width 991px)
	.header-logo
		float: none
		display block
		margin 0 auto 5px
		width 120px
	.contacts
		text-align center
		float: none
		padding 0
	#second
		padding 210px 0 50px
	footer
		padding 50px 0
@media screen and (max-width 767px)
	header
		padding 15px 0
		margin-bottom: 20px
	#main
		padding 0 0 50px
	.contacts
		text-align: center
	.contact
		display: inline-block
	.main-title
		font-size: 32px
		line-height: 42px
	.video-wrapper-main
		bottom: 0
		margin-bottom: 0
		margin-top: 30px
	#second
		padding 50px 0
	.second-img
		margin-top 40px
	footer
		text-align: center
		padding 20px 0
	.footer-contact
		display block
		margin-bottom: 5px
	.footer-soc-buttons img
		margin-top: 10px
@media screen and (max-width 485px)
	#main
		padding 0 0 30px
	header
		padding 10px 0
		margin-bottom: 10px
	.header-logo
		width 100px
		margin-bottom: 0
	// .contacts
	.contact
		font-size: 12px
		margin-left: 10px
		line-height: 14px
		padding-left: 15px
	.contact-email
		margin-left: 0
		padding-left: 20px
	.main-title
		font-size: 26px
	#second
		padding 30px 0
	.general-title
		font-size: 24px
		margin-bottom: 25px
	.second-text
		margin-bottom: 10px
	.second-img
		margin-top: 30px
	footer
		padding 15px 0
		font-size: 14px
		line-height: 1
	.footer-contact
		margin-bottom 10px
	.footer-soc-buttons img
		margin-top: 20px
@media screen and (max-width 385px)
	.main-title
		font-size: 22px
		line-height: 32px
	.video-wrapper-main
		margin-top: 20px